<div class="container">
<div class="text-center app-form">
  <%= form_for(@post) do |f| %>
    <%= f.label :title %>:
    <p><%= f.text_field :title %></p>
    <%= f.label :description %>:
    <p><%= f.text_area :description, cols: 50, rows: 20 %></p>
      <%= f.submit class: "btn btn-add" %>
  <% end %>
</div>
</div>